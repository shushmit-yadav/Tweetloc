<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvGroupName"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"/>

    <Button
        android:id="@+id/btnAcceptGroup"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_accept_100"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/btnRejectGroup"
        android:background="@drawable/ic_reject_100"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnAcceptGroup"
        android:layout_toStartOf="@+id/btnAcceptGroup"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="40dp" />

</RelativeLayout>